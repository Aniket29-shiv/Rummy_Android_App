<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgoundfragmend"
    android:layout_height="match_parent"
    tools:context=".GameChatActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerview"
        android:layout_above="@+id/lnr_bottom"
        android:background="@color/backgoundfragmend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnr_heading"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:id="@+id/lnr_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="3"
        android:padding="10dp"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/edtText"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:hint="write a message......."
            android:padding="17dp"
            android:layout_weight="2.8"
            android:textColor="@color/backgoundfragmend"
            android:background="@drawable/raounded_order_blank"
            android:textColorHint="@android:color/darker_gray"
            />

        <ImageView
            android:id="@+id/btnSendMessage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/chaticon"
            android:layout_weight="0.2"
            android:rotation="-15"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:id="@+id/imgclose"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"
           />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Table Chat"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>






</RelativeLayout>