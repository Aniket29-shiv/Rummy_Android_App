<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bghome">


        <ImageView
            android:id="@+id/imgclosetop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/close"
            android:visibility="visible"
            android:elevation="5dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginVertical="25dp"
            android:background="@drawable/pop_setting"
            android:layout_marginHorizontal="50dp"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:scrollbars="none"
                >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                android:id="@+id/txtshare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="SHARE YOUR INVITE CODE"
                android:textColor="@color/colordullwhite"
                android:textSize="25dp"

                />


            <RelativeLayout
                android:id="@+id/rltrefer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/txtshare"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/coupon">

                <TextView
                    android:id="@+id/txtReferalcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="23423432"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/txtAnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/rltrefer"
                android:layout_marginTop="10dp"
                android:text="AND GET"
                android:textColor="@color/colordullwhite"
                android:textSize="12dp" />

            <LinearLayout
                android:id="@+id/lnrchips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAnd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal"
               >

                <ImageView
                    android:id="@+id/imgchips"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/invitechips"
                    android:visibility="visible" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100,000 CHIPS"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrsocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrchips"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/imgfb"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/facebook"
                    android:visibility="visible" />
                <ImageView
                    android:id="@+id/imgwhats"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/whaatup"
                    android:visibility="visible" />
                <ImageView
                    android:id="@+id/imgmail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/mailsocial"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtyourfrind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lnrsocial"
                android:layout_marginTop="8dp"
                android:text="YOUR FRIEND WILL GET"
                android:textColor="@color/colordullwhite"
                android:textSize="15dp" />


            <LinearLayout
                android:id="@+id/lnrtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtyourfrind"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/invitechips"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/txtchipsbelow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100,000 CHIPS"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lnrtxt"
                android:text="INVITE LIMIT 10 FRIENDS"
                android:textColor="@color/colordullwhite"
                android:textSize="10dp" />
            </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>